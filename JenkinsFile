pipeline{
    agent any
    tools{
        maven 'maven'
        jdk 'jdk11'
    }
    options {
                buildDiscarder logRotator(artifactDaysToKeepStr: '15', artifactNumToKeepStr: '10', daysToKeepStr: '15', numToKeepStr: '10')
            }
    stages{
        stage("Tools Initialisation"){
            steps{
                 sh "mvn --version"
                 sh "java -version"
            }
        }
        stage("Checkout"){
            steps{
                 git branch: 'main',
                url: "https://github.com/vaishnavi59501/DemoRepo1.git"
            }
           
        }
        stage("Cleaning Workspace"){
            steps{
                 sh "mvn clean"
            }
        }
        stage("Build"){
            steps{
                  sh "mvn install"
            }
        }
        stage("Running Testcase"){
            steps{
                 sh "mvn test"
            }
        }
        stage("Packaging"){
            steps{
                sh "mvn package -DskipTests"
            }
        }
        stage("Deploying")
        {
            steps{
                  sh "sudo ./deployscript.sh"
            }
        }
        
    }
}

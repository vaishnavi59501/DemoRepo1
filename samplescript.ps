#!/usr/bin/pwsh

#Get-ChildItem is used to list out child items of specific location
#Get-ChildItem '/home/vaishnavi16d107/files'

#write-host(" ")
#Get-ChildItem '/home/vaishnavi16d107/files' -Name

#File and Folder Cmdlets
#Creating new folder
New-Item -Path '/home/vaishnavi16d107/demo1' -ItemType Directory

#Creating new file
New-Item -Path '/home/vaishnavi16d107/demo1/samplefile.txt' -ItemType File

#Writing to the file
Set-Content -Path '/home/vaishnavi16d107/demo1/samplefile.txt' "This is sample file"

#Retrieving the contents from file
Get-Content '/home/vaishnavi16d107/demo1/samplefile.txt'

#Renaming the file
Rename-Item '/home/vaishnavi16d107/demo1/samplefile.txt' '/home/vaishnavi16d107/demo1/demofile.txt'

#copying files from one folder to another folder
Copy-Item '/home/vaishnavi16d107/demo1' '/home/vaishnavi16d107/demo2'

#copying file contents
Copy-Item '/home/vaishnavi16d107/demo1/demofile.txt' -Destination '/home/vaishnavi16d107/demo1/demofile1.txt'

#Deleting folder
Remove-Item '/home/vaishnavi16d107/demo2/demo1' -Recurse

#Deleting files in folder
Remove-Item '/home/vaishnavi16d107/demo1/demofile1.txt' -Recurse

#Moving folder
Move-Item '/home/vaishnavi16d107/demo1' '/home/vaishnavi16d107/demo2'

#Moving files
Move-Item '/home/vaishnavi16d107/demo2/demo1/demofile.txt' '/home/vaishnavi16d107/demo'

write-host(" ")
#Checking the existence of the folder
Test-Path '/home/vaishnavi16d107/demo2'
write-host(" ")
#Checking the existence of the file
Test-Path '/home/vaishnavi16d107/demo/demofile.txt'

#Date and Time Cmdlets
#Getting current system datetime
Get-Date

#getting current system date alone
Get-Date -DisplayHint Date

#Getting system Time 
Get-Date -DisplayHint Time

New-Item -Path '/home/vaishnavi16d107/demo2/testfile.txt' -ItemType File
Set-Content '/home/vaishnavi16d107/demo2/testfile.txt' "Hello all,"
#Appending contents in file
Add-Content '/home/vaishnavi16d107/demo2/testfile.txt' "Good Afternoon"
Get-Content '/home/vaishnavi16d107/demo2/testfile.txt'

#Erasing file contents
Clear-Content '/home/vaishnavi16d107/demo2/testfile.txt'
write-host(" ")
write-host("cleared contents in file")

#Advanced cmdlets

$a=@(1,2,3,4,2,3,1,4) #Declaring array

$a #Displaying array a
write-host(" ")
$a |sort|Get-Unique #Displaying array $a with unique elements
write-host(" ")
$a |get-member
Get-Content '/home/vaishnavi16d107/demo/demofile.txt' | measure-object -character -word -line

#Comparing the contents of two files
Compare-Object -ReferenceObject $(Get-Content '/home/vaishnavi16d107/demo/demofile.txt') -DifferenceObject $(Get-Content '/home/vaishnavi16d107/demo/demofile1.txt') -IncludeEqual

#Formatting the Output
$files=Get-ChildItem '/home/vaishnavi16d107/demo'
$files | Format-List
$files | Format-Wide
